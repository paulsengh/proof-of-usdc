{
  "include": [".", "types.d.ts"],
  "exclude": ["tests", "dist", "**.test.*"],
  "allowImportingTsExtensions": true,
  "compilerOptions": {
    "outDir": "dist",
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "typeRoots": ["./../../node_modules/@types"],
    "esModuleInterop": true,
    "target": "esnext",
    "moduleResolution": "Node",
    "module": "esnext",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "strict": true
  }
}
